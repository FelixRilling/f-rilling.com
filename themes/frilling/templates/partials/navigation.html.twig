<nav class="navbar navbar-default">
<div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarHeader" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">F-Rilling.com</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbarHeader">
        <ul class="nav navbar-nav navbar-right">
            {% for page in pages.children.visible %}
                {% set current_page = (page.active or page.activeChild)
                    ? 'active'
                    : '' %}
                <li class="{{ current_page }}">
                    <a href="{{ page.url }}">
                        {% if page.header.icon %}
                            <i class="fa fa-{{ page.header.icon }}"></i>
                        {% endif %}
                        {{ page.menu }}
                    </a>
                </li>
            {% endfor %}

            {% if config.plugins.login.enabled and grav.user.username %}
                <li>
                    <i class="fa fa-lock"></i>
                    {% include 'partials/login-status.html.twig' %}</li>
            {% endif %}
        </ul>
    </div>
</div>
</nav>
