{% extends 'partials/base.html.twig' %}

{% block content_header %}
    <h1>{{page.content}}</h1>
{% endblock %}

{% block content_main %}
    {% for category in header.content.categorys %}
        <h2>
            <i class="fa fa-{{category.icon}}"></i>{{category.name}}:</h2>
        <ul>
            {% for project in header.content.projects %}
                {% if project.category == category.id %}
                    <li class="">
                        <a href="{{ url(project.file) }}" class="">
                            {{project.name}}
                        </a>
                        {% if project.download %}
                            <a href="{{project.download}}" class="icon" title="Download {{project.name}}">
                                <i class="fa fa-download"></i>
                            </a>
                        {% endif %}
                        {% if project.article %}
                            <a href="{{project.article}}" class="icon" title="Article for {{project.name}}">
                                <i class="fa fa-file-text-o"></i>
                            </a>
                        {% endif %}
                        <span class="version" class="">
                            &lt;{{project.version}}&gt;
                        </span>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    {% endfor %}

    {% include 'modular/social.html.twig' %}

{% endblock %}
