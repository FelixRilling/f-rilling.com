{% extends 'partials/base.html.twig' %}

{% block content_header %}
{% endblock %}

{% block content_main %}
    {% for category in header.data.categories %}
        <h2>
            <i class="fa fa-{{category.icon}}"></i>{{category.name}}:</h2>
        <ul>
            {% for project in header.data.projects | sort_by_key("id") | reverse %}
                {% if project.category == category.id %}
                    <li>
                        <a href="{{ url(project.file) }}" title="Go to Project {{project.name}}">
                            {{project.name}}
                        </a>
                        <span class="version" class="">
                            &lt;{{project.version}}&gt;
                        </span>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    {% endfor %}

    {% include 'modular/social.html.twig' %}

{% endblock %}
