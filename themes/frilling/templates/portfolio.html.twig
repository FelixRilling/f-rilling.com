{% extends 'partials/base.html.twig' %}
{% block content %}{% endblock %}
{% block content_wrapper %}
    <main class="portfolio">
        {% for category in header.data.categories %}
            <section class="category" style="background-image:url('{{ url('theme://img/images/' ~ category.img) }}');">
                <div class="arrow-wrapper">
                    <div class="arrow"></div>
                    <h2>
                        {{category.name}}
                    </h2>
                </div>
                <div class="items container">
                    {% for project in header.data.projects | sort_by_key("id") %}
                        {% if project.category == category.id %}
                            <div class="item row">
                                <div class="col-xs-12 col-md-4">
                                    <a href="{{project.url}}" title="Go to {{project.name}}" target="_blank">
                                        <img src="{{ url('theme://img/thumbs/' ~ project.img) }}" class="full-width" alt="Thumbnail of {{project.name}}" title="Thumbnail of {{project.name}}">
                                    </a>
                                </div>
                                <div class="col-xs-12 col-md-8 ">
                                    <div class="text-box">
                                        <h3>
                                            <a href="{{project.url}}" title="Go to {{project.name}}" target="_blank">{{project.name}}</a>
                                        </h3>
                                        <p>{{project.description}}</p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </section>
        {% endfor %}
        {% include 'modular/social.html.twig' %}
    </main>
{% endblock %}
